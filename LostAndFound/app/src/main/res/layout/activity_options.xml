<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wuw037.lostandfound.Options">


    <Button
        android:id="@+id/found"
        android:layout_width="217dp"
        android:layout_height="120dp"
        android:layout_gravity="top|center_horizontal"
        android:text="Found Item"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="61dp"
        android:layout_marginLeft="84dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/lost"
        android:layout_width="217dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom|center_horizontal"
        android:text="Lost Item"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/found"
        android:layout_marginLeft="84dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/mypost_button"
        android:layout_width="227dp"
        android:layout_height="120dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="17dp"
        android:text="My Posts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lost" />


</android.support.constraint.ConstraintLayout>
